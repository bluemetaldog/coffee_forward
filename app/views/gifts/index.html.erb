<div class='row'>
	<div class='span2'>
		<img src='/assets/beans.jpg' width='144', height='144' class='img-circle'/>

	</div>
	<div class='span5'>
		<h1>Heidi </h1>

		<p class='lead'>
			<i class='icon-gift'></i>
			Tall bold, one sugar</p>
	</div>
</div>

<div class='row'>
	<div class='span8'>
		<h4>
			Give a coffee to Heidi:
		</h4>
		<%= form_for Gift.new, :html => { :class => "form-inline" } do |f| %>
			<%= f.text_field :from, :class => "input-small", :placeholder => "From" %>
			<%= f.text_field :message, :class => "input-small", :placeholder => "Message" %>
			<%= f.submit "Give Coffee", :class => "btn" %>
		<% end %>
	</div>
</div>
<h4 class="gifts-title">
  Gifts given to Heidi:
</h4>
 
<div class="row">
  <div class="span8">
    <table class="table">
      <tr>
        <th>From:</th>
        <th>Message:</th>
      </tr>
 
    <% @gifts.each do |gift| %>
      <tr>
        <td><%= gift.from %></td>
        <td><%= gift.message %></td>
      </tr>
    <% end %>
    </table>
  </div>
</div>